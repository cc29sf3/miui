<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.cnki6187.miui.MainActivity"
    tools:showIn="@layout/activity_main">

    <Button
        android:id="@+id/button2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:background="@android:color/holo_blue_bright"
        android:text="取消"
        app:layout_constraintBottom_toBottomOf="@+id/button3"
        app:layout_constraintLeft_toLeftOf="@+id/guideline"
        android:layout_marginStart="5dp" />

    <Button
        android:id="@+id/button3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="54dp"
        android:layout_marginRight="5dp"
        android:background="@android:color/holo_blue_bright"
        android:elevation="0dp"
        android:text="登录"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/guideline"
        android:layout_marginEnd="5dp" />

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="192dp" />

<android.support.v7.widget.CardView
    android:layout_width="250dp"
    android:layout_height="283dp"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    android:layout_marginLeft="8dp"
    android:layout_marginBottom="200dp"
    app:cardBackgroundColor="@color/blue"
    app:cardCornerRadius="16dp"
    app:cardElevation="16dp"
    android:layout_marginRight="8dp"
    app:layout_constraintRight_toRightOf="parent">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <Button
        android:id="@+id/buttonRecycle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Recycle"
        />
    <Button
        android:id="@+id/buttonPagerView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/buttonRecycle"
        android:layout_marginLeft="5dp"
        android:text="PagerView"
        />
    <Button
        android:id="@+id/buttonFragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/buttonRecycle"
        android:layout_marginTop="5dp"
        android:text="Fragment"
        />

    <Button
        android:id="@+id/buttonIndcater"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/buttonFragment"
        android:layout_alignTop="@id/buttonFragment"
        android:text="Indcater"
        />
</RelativeLayout>
</android.support.v7.widget.CardView>


</android.support.constraint.ConstraintLayout>
